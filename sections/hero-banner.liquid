{% comment %}
  HERO BANNER SECTION
  ---------------
  * Displays a full‑width background image, heading, subheading, and optional CTA button.
  * Fully OS 2.0 compatible (section & blocks).
  * Mobile‑first responsive with CSS in `assets/section-hero-banner.css`.
{% endcomment %}

<section class="section-hero-banner relative w-full text-center flex items-center justify-center overflow-hidden">
  <style>
    @layer components {
      .section-hero-banner {
        min-height: 60vh;
      }
      @media (min-width: 768px) {
        .section-hero-banner {
          min-height: 75vh;
        }
      }
    }
  </style>

  <div class="absolute inset-0 bg-cover bg-center" style="background-image: url({{ section.settings.image | img_url: '2100x' }});"></div>

  <div class="relative z-10 max-w-4xl mx-auto px-6 py-12 text-gray-100">
    <h1 class="text-3xl md:text-5xl font-extrabold mb-4">{{ section.settings.heading | escape }}</h1>
    <div class="richtext mb-6 text-lg md:text-2xl">{{ section.settings.subheading }}</div>

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="inline-block bg-white text-gray-900 font-semibold px-8 py-3 rounded-lg shadow-lg hover:bg-gray-100 transition">
        {{ section.settings.button_label | escape }}
      </a>
    {% endif %}
  </div>

  {% if section.settings.overlay %}
    <div class="absolute inset-0 bg-black/60"></div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero banner",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen de fondo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título principal",
      "default": "Título impactante"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Descripción"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del botón",
      "default": "Comprar ahora"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón"
    },
    {
      "type": "checkbox",
      "id": "overlay",
      "label": "Oscurecer imagen",
      "default": true
    }
  ],
  "presets": [
    { "name": "Hero banner" }
  ]
}
{% endschema %}