{% schema %}
{
  "name": "Header Personalizado",
  "tag": "header",
  "class": "header-personalizado",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },

    {
      "type": "text",
      "id": "nav_1_label",
      "label": "Texto botón 1",
      "default": "SHOP"
    },
    {
      "type": "url",
      "id": "nav_1_url",
      "label": "Enlace botón 1"
    },

    {
      "type": "text",
      "id": "nav_2_label",
      "label": "Texto botón 2",
      "default": "LOOKBOOK"
    },
    {
      "type": "url",
      "id": "nav_2_url",
      "label": "Enlace botón 2"
    },

    {
      "type": "text",
      "id": "nav_3_label",
      "label": "Texto botón 3",
      "default": "ABOUT"
    },
    {
      "type": "url",
      "id": "nav_3_url",
      "label": "Enlace botón 3"
    }
  ],
  "presets": [
    {
      "name": "Header Personalizado",
      "category": "Header"
    }
  ]
}
{% endschema %}

<style>
.header-personalizado {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 32px;
  background-color: white;
  border-bottom: 1px solid #eee;
  font-family: sans-serif;
}

.header-personalizado .left,
.header-personalizado .center,
.header-personalizado .right {
  display: flex;
  align-items: center;
  gap: 24px;
}

.header-personalizado .center {
  justify-content: center;
  flex: 1;
  text-transform: uppercase;
  font-weight: bold;
  font-size: 14px;
}

.header-personalizado .right svg {
  width: 20px;
  height: 20px;
  stroke: #111;
  cursor: pointer;
}
</style>

<header class="header-personalizado">
  <!-- Logo izquierdo -->
  <div class="left">
    {% if section.settings.logo %}
      <a href="/">
        <img src="{{ section.settings.logo | image_url: 'medium' }}" alt="Logo" style="height: 40px;">
      </a>
    {% else %}
      <a href="/" style="font-weight: bold;">LOGO</a>
    {% endif %}
  </div>

  <!-- Menú central editable -->
  <div class="center">
    {% if section.settings.nav_1_url %}
      <a href="{{ section.settings.nav_1_url }}">{{ section.settings.nav_1_label }}</a>
    {% endif %}
    {% if section.settings.nav_2_url %}
      <a href="{{ section.settings.nav_2_url }}">{{ section.settings.nav_2_label }}</a>
    {% endif %}
    {% if section.settings.nav_3_url %}
      <a href="{{ section.settings.nav_3_url }}">{{ section.settings.nav_3_label }}</a>
    {% endif %}
  </div>

  <!-- Íconos a la derecha -->
  <div class="right">
    <a href="/search" aria-label="Search">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
    </a>
    <a href="/pages/wishlist" aria-label="Wishlist">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 21c-4.84-4.05-8-7.42-8-11.2A5.2 5.2 0 0 1 9.2 4.6c1.42 0 2.73.65 3.8 1.7 1.07-1.05 2.38-1.7 3.8-1.7A5.2 5.2 0 0 1 20 9.8c0 3.78-3.16 7.15-8 11.2z"/></svg>
    </a>
    <a href="/account" aria-label="Account">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="8" r="4"/><path d="M4 20c0-4 4-6 8-6s8 2 8 6"/></svg>
    </a>
    <a href="/cart" aria-label="Cart">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M6 6h15l-1.5 9h-13z"/><circle cx="9" cy="20" r="1"/><circle cx="18" cy="20" r="1"/></svg>
    </a>
  </div>
</header>

